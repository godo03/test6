<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.HighScores"
    android:orientation="vertical"
    android:background="#cbe2b0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:background="@drawable/custom_backgroundred"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/hobbit"
            android:gravity="center"
            android:text="Player\nName"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center|top"
            android:layout_weight="1"
            android:fontFamily="@font/hobbit"
            android:gravity="center"
            android:text="Sports"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:fontFamily="@font/hobbit"
            android:gravity="center"
            android:text="Scores"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>

    <ListView
        android:id="@+id/scoreList"
        android:layout_width="match_parent"
        android:layout_height="564dp"
        />

    <ImageButton
        android:id="@+id/rcontinue"
        android:layout_width="76dp"
        android:layout_height="71dp"
        android:layout_alignParentRight="true"
        android:alpha="1"
        android:background="#00000000"
        android:layout_gravity="center"
        android:onClick="endGame"
        android:scaleType="fitXY"
        android:src="@drawable/home"
        android:textColor="#000309"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="625dp"
        tools:visibility="visible"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>