<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"

            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageButton
                android:id="@+id/rcontinue"
                android:layout_width="46dp"
                android:layout_height="39dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:alpha="1"
                android:background="#00000000"
                android:onClick="endGame"
                android:scaleType="fitXY"
                android:src="@drawable/home"
                android:textColor="#000309"
                tools:visibility="visible" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/playerName_tv_list"
                android:layout_width="206dp"
                android:layout_height="77dp"
                android:background="@drawable/custom_background4"
                android:fontFamily="@font/hobbit"
                android:gravity="center"
                android:text="Player Name"
                android:textColor="@color/black"
                android:textSize="24sp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/hobbit"
                android:text="Score: 0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hobbit"
                android:text="Question #:"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/hobbit"
                android:text="Timer:"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:background="#0F374446"
            android:fontFamily="@font/hobbit"
            android:gravity="center"
            android:padding="13dp"
            android:textColor="#E9E7E3"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">


            <Button
                android:id="@+id/btnOptionA"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/new_buttonblue"
                android:clickable="false"
                android:fontFamily="@font/hobbit"
                android:includeFontPadding="true"
                android:longClickable="true"
                android:onClick="clickOption1"
                android:padding="5dp"
                android:text="Option A"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnOptionB"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/new_buttonred"
                android:clickable="false"
                android:fontFamily="@font/hobbit"
                android:longClickable="true"
                android:onClick="clickOption2"
                android:padding="5dp"
                android:text="Option B"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <Button
                android:id="@+id/btnOptionC"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/new_buttonyellow"
                android:clickable="false"
                android:fontFamily="@font/hobbit"
                android:includeFontPadding="true"
                android:longClickable="true"
                android:onClick="clickOption3"
                android:padding="5dp"
                android:text="Option C"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnOptionD"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/new_button"
                android:clickable="false"
                android:fontFamily="@font/hobbit"
                android:longClickable="true"
                android:onClick="clickOption4"
                android:padding="5dp"
                android:text="Option D"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>



    </LinearLayout>

</ScrollView>